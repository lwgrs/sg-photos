---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - blog
permalink: /tags/{{ tag }}/
layout: base
---

<p><a href="/tags/">All Tags</a> &#8226; <a href="/">Return Home</a> &#8226; <a href="/archive/">View Archive</a></p>
<h3>#{{ tag }}</h3>

<div class="archive">
<ul>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
 <li><img src="{{ post.data.meta_image }}" />&nbsp;<a href="{{ post.url }}">{{ post.data.title }}</a> &nbsp;<em>{{ post.data.date | readableDate }}</em></li>
{% endfor %}
</ul>
</div>